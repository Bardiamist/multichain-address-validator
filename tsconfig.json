{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "ESNext", "dom",
        ],
        "module": "NodeNext",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "allowJs": true,
    },
    "exclude": [
        "./dist",
        "./test",
        "./config",
    ]
}
